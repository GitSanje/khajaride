KHAJARIDE_PRIMARY.ENV="local"

KHAJARIDE_SERVER.PORT="8080"
KHAJARIDE_SERVER.READ_TIMEOUT="30"
KHAJARIDE_SERVER.WRITE_TIMEOUT="30"
KHAJARIDE_SERVER.IDLE_TIMEOUT="60"
KHAJARIDE_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

KHAJARIDE_DATABASE.HOST="localhost"
KHAJARIDE_DATABASE.PORT="5432"
KHAJARIDE_DATABASE.USER="postgres"
KHAJARIDE_DATABASE.PASSWORD=""
KHAJARIDE_DATABASE.NAME="khajaride"
KHAJARIDE_DATABASE.SSL_MODE="disable"
KHAJARIDE_DATABASE.MAX_OPEN_CONNS="25"
KHAJARIDE_DATABASE.MAX_IDLE_CONNS="25"
KHAJARIDE_DATABASE.CONN_MAX_LIFETIME="300"
KHAJARIDE_DATABASE.CONN_MAX_IDLE_TIME="300"

KHAJARIDE_AUTH.SECRET_KEY="secret"

KHAJARIDE_INTEGRATION.RESEND_API_KEY="resend_key"

KHAJARIDE_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
KHAJARIDE_OBSERVABILITY.SERVICE_NAME="khajaride"
KHAJARIDE_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
KHAJARIDE_OBSERVABILITY.LOGGING.LEVEL="debug"
KHAJARIDE_OBSERVABILITY.LOGGING.FORMAT="console"
KHAJARIDE_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
KHAJARIDE_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
KHAJARIDE_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
KHAJARIDE_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
KHAJARIDE_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
KHAJARIDE_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
KHAJARIDE_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
KHAJARIDE_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
KHAJARIDE_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"